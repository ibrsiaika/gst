# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=gst_saas

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# IRP (E-Invoice) - Sandbox
IRP_BASE_URL=https://einv-apisandbox.nic.in
IRP_CLIENT_ID={EINVOICE_API_KEY}
IRP_CLIENT_SECRET={EINVOICE_SECRET}
IRP_USERNAME={IRP_USERNAME}
IRP_PASSWORD={IRP_PASSWORD}

# E-Way Bill - Sandbox
EWAY_BASE_URL=https://preprod-api.ewaybillgst.gov.in
EWAY_API_KEY={EWAY_API_KEY}
EWAY_USERNAME={EWAY_USERNAME}
EWAY_PASSWORD={EWAY_PASSWORD}

# GSTIN Verification
GSTIN_API_URL=https://einv-apisandbox.nic.in/version1.03

# GST Return Service
GST_RETURN_URL={GST_RETURN_URL}
GST_RETURN_CREDS={GST_RETURN_CREDS}

# Notifications
SMTP_HOST={SMTP_HOST}
SMTP_PORT={SMTP_PORT}
SMTP_USER={SMTP_USER}
SMTP_PASSWORD={SMTP_PASSWORD}

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID={TWILIO_SID}
TWILIO_AUTH_TOKEN={TWILIO_TOKEN}
TWILIO_WHATSAPP_NUMBER={TWILIO_WHATSAPP}

# Razorpay
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=your_secret

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads

